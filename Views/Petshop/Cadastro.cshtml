<form>
    <h2>Cadastro de Petshop</h2>
    <div class="form-row">
        <div class="form-group col-md-8">
            <label for="inputEmail4">Nome</label>
            <input type="text" class="form-control" id="input-nome-petshop" placeholder="Nome">
        </div>
        <div class="form-group col-md-4">
            <label for="inputPassword4">Quantidade de Vagas</label>
            <input type="number" class="form-control" id="input-qtd-vagas" placeholder="Qtd de Vagas">
        </div>
    </div>
    <div class="form-group">
        <label for="inputAddress">Endereco</label>
        <input type="text" class="form-control" id="input-endereco-petshop" placeholder="Av. Milão, Nº 1234">
    </div>
    <button type="submit" class="btn btn-success btn-salvar-petshop"><i class="fa fa-save"></i> Salvar</button>
    <button class="btn btn-danger btn-cancelar-petshop"><i class="fa fa-close"></i> Cancelar</button>
</form>