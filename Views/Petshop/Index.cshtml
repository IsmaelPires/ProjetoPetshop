@using ProjetoPetshop.Dominio.Entidades
@model IEnumerable<Petshop>


<div class="m-5">
    <h2>Listagem de Petshops</h2>
    <div class="col-md-12">
        <button class="btn btn-success pull-right novo-petshop mb-2"><i class="fa fa-plus"></i> Novo Petshop</button>
        <button class="btn btn-primary pull-right voltar-petshop mb-2 mr-2"><i class="fa fa-close"></i> Voltar</button>
        <table class="table table-bordered table-hover mt-2">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Endereço</th>
                    <th scope="col">Quantidade de Vagas</th>
                    <th scope="col" style="width: 10%;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var petshop in Model)
                {
                    <tr>
                        <th scope="row">@petshop.Id</th>
                        <td>@petshop.Nome</td>
                        <td>@petshop.Endereco</td>
                        <td>@petshop.QuantidadeVagas</td>
                        <td>
                            <button class="btn btn-warning btn-sm" data-id="@petshop.Id" id="btn-editar"><i class="fa fa-pencil-square-o"></i></button>
                            <button class="btn btn-danger btn-sm" data-id="@petshop.Id" id="btn-excluir"><i class="fa fa-trash-o"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>